<%= render 'layouts/navbar' %>

<h3>
  <%= @programmer.name %> | <%= formatted_date(@programmer.birth_date) %> - <%= formatted_date(@programmer.death_date) %>
</h3>

<div class="row jumbotron">

  <div class="col-md-3">
    <%= image_tag @programmer.image, height: '250px', class:"profile-image" %>
  </div>

  <div class="col-md-9 programmer-info">

    <%= render partial: 'attribute', locals: {label: 'Home Country:', programmer_attribute: @programmer.home_country} %>

    <%= render partial: 'attribute', locals: {label: 'Quotee:', programmer_attribute: @programmer.quote} %>

    <%= render partial: 'attribute', locals: {label: 'Claim To Fame:', programmer_attribute: @programmer.claim_to_fame} %>

    <p>
    <%= link_to "Learn more about #{@programmer.name}", @programmer.wikipedia_page, target: '_blank' %>
    </p>

  </div>
</div>
