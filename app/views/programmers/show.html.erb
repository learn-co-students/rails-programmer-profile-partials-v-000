<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, root_path %>

<h3>
  <%= render partial: 'programmername', locals: {programmer: @programmer} %>
</h3>

<div class="row jumbotron">

  <div class="col-md-3">
    <%= image_tag @programmer.image, height: '250px', class:"profile-image" %>
  </div>

  <div class="col-md-9 programmer-info">

  <%= render partial: 'attribute', locals: { home_country: @programmer.home_country, quote: @programmer.quote, claim_to_fame: @programmer.claim_to_fame, wikipedia_page: @programmer.wikipedia_page, name: @programmer.name} %>

  </div>
</div>

