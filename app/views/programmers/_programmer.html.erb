<h3>
  <%= programmer.name %>: <%= formatted_date(programmer.birth_date) %> - <%= formatted_date(programmer.death_date) || "(Still Alive!)" %>
</h3>

<%= link_to programmer_path(programmer) do %>
    <p class="list-group-item programmer-item">
      <%= image_tag programmer.image, width: '100px' %>
      <%= programmer.name %>
    </p>
<% end %>