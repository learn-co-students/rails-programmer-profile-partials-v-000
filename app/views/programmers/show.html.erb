<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, root_path %>

<%= render partial: "programmer", locals: {programmer: @programmer} %>

  <div class="col-md-9 programmer-info">

    <p>
    <strong>Home Country:</strong> <%= @programmer.home_country %><br>
    </p>

    <p>
    <strong>Quote:</strong> <%= @programmer.quote %><br>
    </p>

    <p>
    <strong>Claim To Fame:</strong> <%= @programmer.claim_to_fame %>
    </p>

    <p>
    <%= link_to "Learn more about #{@programmer.name}", @programmer.wikipedia_page, target: '_blank' %>
    </p>

  </div>
</div>
